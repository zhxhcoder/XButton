<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.zhxh.xbuttonlib.XButton
        android:id="@+id/XButton1"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:text="椭圆形"
        android:textColor="@android:color/white"
        app:XangleCorner="45dp"
        app:XpressedColor="@color/colorPrimaryDark"
        app:XsolidColor="@color/colorPrimary"
        app:XstrokeColor="@color/colorAccent"
        app:XstrokeWidth="1dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.zhxh.xbuttonlib.XButton
        android:id="@+id/XButton2"
        android:layout_width="50dp"
        android:layout_height="0dp"
        android:layout_marginTop="68dp"
        android:gravity="center"
        android:text="圆形"
        android:textColor="@android:color/white"
        app:XangleCorner="45dp"
        app:XsolidColor="@color/colorPrimary"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintHorizontal_bias="0.3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.zhxh.xbuttonlib.XButton
        android:id="@+id/XButton3"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="圆角矩形"
        android:textColor="@android:color/white"
        app:XangleCorner="2dp"
        app:XpressedColor="@color/colorPrimaryDark"
        app:XsolidColor="@color/colorPrimary"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/XButton2" />

    <com.zhxh.xbuttonlib.XButton
        android:id="@+id/XButton4"
        android:layout_width="55dp"
        android:layout_height="36dp"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:paddingTop="22dp"
        android:text="200"
        android:textColor="@android:color/white"
        android:textSize="10sp"
        app:XpressedTextColor="@color/C12"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/XButton3" />


    <com.zhxh.xbuttonlib.XButton
        android:id="@+id/XButton6"
        android:layout_width="322dp"
        android:layout_height="51dp"
        android:layout_marginTop="352dp"
        android:layout_marginEnd="28dp"
        android:layout_marginRight="28dp"
        android:drawableRight="@drawable/ic_arrow"
        android:gravity="center"
        android:text="圆角矩形"
        android:textColor="@android:color/white"
        app:XangleCorner="2dp"
        app:XdrawablePadding="10dp"
        app:XpressedColor="@color/colorPrimaryDark"
        app:XpressedTextColor="@android:color/holo_purple"
        app:XsolidColor="@color/colorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <com.zhxh.xbuttonlib.XButton
        android:id="@+id/btnRegister"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="订阅"
        android:textColor="@android:color/white"
        app:XangleCorner="2dp"
        app:XpressedColor="@color/colorPrimaryDark"
        app:XsolidColor="@color/colorPrimary"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/XButton3" />


    <com.zhxh.xbuttonlib.XButton
        android:id="@+id/btnUnRegister"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:gravity="center"
        android:text="取消订阅"
        android:textColor="@android:color/white"
        app:XangleCorner="2dp"
        app:XpressedColor="@color/colorPrimaryDark"
        app:XsolidColor="@color/colorPrimary"
        app:layout_constraintLeft_toRightOf="@+id/btnRegister"
        app:layout_constraintTop_toTopOf="@+id/btnRegister" />

    <TextView
        android:id="@+id/postText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:layout_marginLeft="15dp"
        android:text="数据："
        android:textColor="@color/colorPrimary"
        app:layout_constraintTop_toBottomOf="@+id/btnRegister" />


</android.support.constraint.ConstraintLayout>